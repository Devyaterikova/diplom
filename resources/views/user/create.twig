{% extends 'base.twig' %}

{% block title %}Новый пользователь{% endblock %}

{% block content %}
<div class="container">
    <h2>Новый пользователь</h2> 
    <hr>
    <form class="form" method="post" action="{{route('user.store')}}" accept-charset="utf8">
        {{ csrf_field() }}
        <input class="form-control" type="text" name="name" value="" placeholder="Имя пользователя" id="form_name" required>
        <input class="form-control" type="email" name="email" value="" placeholder="E-mail" id="form_email" required>
        <input class="form-control" type="password" name="password" value="" placeholder="Пароль" id="form_password" required>
        <input type="submit" name="submit" value="Сохранить" class="btn btn-success">
    </form>
</div>   
{% endblock %}   